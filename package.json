{
  "name": "cocos-mcp-server",
  "version": "1.4.0",
  "description": "MCP server integration for Cocos Creator 2.4.x.",
  "author": "LiDaxian",
  "main": "./dist/extension.js",
  "panel": {
    "main": "dist/panels/default/index.js",
    "type": "dockable",
    "title": "MCP Server",
    "width": 600,
    "height": 500
  },
  "main-menu": {
    "MCP Server/Open Panel": {
      "message": "cocos-mcp-server:open-panel"
    },
    "MCP Server/Start Server": {
      "message": "cocos-mcp-server:start-server"
    },
    "MCP Server/Stop Server": {
      "message": "cocos-mcp-server:stop-server"
    }
  },
  "scene-script": "dist/scene.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json -w",
    "test": "npm run build && node ./test/editor-adapter.test.js"
  },
  "dependencies": {
    "fs-extra": "^11.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.5",
    "@types/node": "^18.17.1",
    "@types/uuid": "^9.0.8",
    "typescript": "^5.8.2"
  }
}
